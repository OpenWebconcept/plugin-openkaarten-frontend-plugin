{
	"name": "openkaarten-frontend-plugin",
	"version": "0.1.0",
	"description": "OpenKaarten Blocks.",
	"author": "Acato",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build src/blocks/index.js && npx mix build --production",
		"build-assets": "npx mix build --production",
		"format:js": "wp-scripts format-js",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"start": "wp-scripts start src/blocks/index.js",
		"start-assets": "npx mix watch",
		"packages-update": "wp-scripts packages-update",
        "i18n": "npm run make-pot ; npm run update-po ; npm run make-mo ; npm run make-json ; npm run make-php",
        "make-pot": "wp i18n make-pot . languages/openkaarten-frontend-plugin.pot --exclude=node_modules,build,languages",
        "update-po": "wp i18n update-po languages/openkaarten-frontend-plugin.pot languages/",
        "make-mo": "wp i18n make-mo languages/",
        "make-json": "wp i18n make-json languages/",
        "make-php": "wp i18n make-php languages/"
	},
	"devDependencies": {
		"@vue/compiler-sfc": "^3.3.2",
		"@wordpress/eslint-plugin": "^17.12.0",
		"@wordpress/prettier-config": "^3.12.0",
		"@wordpress/scripts": "^27.6.0",
		"fs": "0.0.1-security",
		"laravel-mix": "^6.0.49",
		"leaflet": "*",
		"leaflet.markercluster": "*",
		"path": "^0.12.7",
		"resolve-url-loader": "^5.0.0",
		"vue-loader": "^16.8.3"
	},
	"dependencies": {
		"@wordpress/api-fetch": "^6.55.0",
		"@wordpress/block-editor": "^12.23.0",
		"@wordpress/blocks": "^12.32.0",
		"@wordpress/components": "^27.3.0",
		"@wordpress/data": "^9.25.0",
		"@wordpress/edit-post": "*",
		"@wordpress/element": "^5.32.0",
		"@wordpress/i18n": "^4.55.0",
		"@wordpress/icons": "^9.46.0",
		"classnames": "^2.3.2",
		"is-url": "^1.2.4",
		"vue": "3.2.13"
	},
	"prettier": "@wordpress/prettier-config"
}
